<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LiveSetBuilder.App.Pages.RunnerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Runner">
    <VerticalStackLayout Padding="24" Spacing="24">
        <Label Text="{Binding Show.Title}" FontSize="24" />
        <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
            <Button Text="⏮ Prev" />
            <Button Text="⏵ Play" />
            <Button Text="⏭ Next" />
        </HorizontalStackLayout>
        <Label Text="Bar 1 | Next cue: (stub)" FontSize="18" HorizontalOptions="Center"
               TextColor="{StaticResource TextSubtle}"/>
    </VerticalStackLayout>
</ContentPage>
