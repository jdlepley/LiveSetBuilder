<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LiveSetBuilder.App.Pages.ShowsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:core="clr-namespace:LiveSetBuilder.Core.Models;assembly=LiveSetBuilder.Core"
    Title="Shows">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="New Show" Clicked="OnNewShow" Priority="0" Order="Primary" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,*" Padding="12" RowSpacing="0">
        <Label Text="Shows" FontSize="28" FontAttributes="Bold" Margin="0,0,0,10"/>

        <CollectionView Grid.Row="1"
                        x:Name="ShowList"
                        ItemsSource="{Binding Shows}"
                        SelectionMode="Single"
                        SelectionChanged="OnSelectionChanged">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="core:Show"
                              xmlns:core="clr-namespace:LiveSetBuilder.Core.Models;assembly=LiveSetBuilder.Core">
                    <Border x:Name="ItemRoot"
                            Stroke="{StaticResource Stroke}"
                            StrokeThickness="1"
                            BackgroundColor="{StaticResource Panel}"
                            Padding="12"
                            Margin="0,6">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal">
                                    <VisualState.Setters>
                                        <Setter TargetName="ItemRoot" Property="Stroke" Value="{StaticResource Stroke}" />
                                        <Setter TargetName="ItemRoot" Property="StrokeThickness" Value="1" />
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Selected">
                                    <VisualState.Setters>
                                        <Setter TargetName="ItemRoot" Property="Stroke" Value="{StaticResource Accent}" />
                                        <Setter TargetName="ItemRoot" Property="StrokeThickness" Value="2" />
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" FontSize="16" />
                                <Label Text="{Binding UpdatedAt, StringFormat='Updated {0:G}'}"
                                       FontSize="12" TextColor="{StaticResource TextSubtle}"/>
                            </VerticalStackLayout>

                            <Button Grid.Column="1" Text="Edit" Clicked="OnEditShow" Margin="8,0,0,0"/>
                        </Grid>

                        <Border.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="2" Tapped="OnOpenSetEditorTapped"/>
                        </Border.GestureRecognizers>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
